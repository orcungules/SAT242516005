@page "/doktorlar"
@using SAT242516005.Models
@inject MyDbContext db
@inject NavigationManager NavigationManager

<h3>Doktorlar</h3>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Branş</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in db.Doktorlar.ToList())
        {
            <tr>
                <td>@d.Ad</td>
                <td>@d.Soyad</td>
                <td>@d.Brans</td>
                <td>
                    <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo($"/doktor-duzenle/{d.DoktorId}"))">Düzenle</button>
                    <button class="btn btn-danger" @onclick="@(() => Delete(d.DoktorId))">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" @onclick="@(() => NavigationManager.NavigateTo("/doktor-ekle"))">Yeni Doktor</button>

@code {
    private void Delete(int id)
    {
        var d = db.Doktorlar.Find(id);
        if (d != null)
        {
            db.Doktorlar.Remove(d);
            db.SaveChanges();
        }
    }
}
