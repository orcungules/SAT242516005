@page "/hastalar"
@using SAT242516005.Models
@inject MyDbContext db
@inject NavigationManager NavigationManager

<h3>Hastalar</h3>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in db.Hastalar.ToList())
        {
            <tr>
                <td>@h.Ad</td>
                <td>@h.Soyad</td>
                <td>@h.DogumTarihi.ToShortDateString()</td>
                <td>
                    <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo($"/hasta-duzenle/{h.HastaId}"))">Düzenle</button>
                    <button class="btn btn-danger" @onclick="@(() => Delete(h.HastaId))">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" @onclick="@(() => NavigationManager.NavigateTo("/hasta-ekle"))">Yeni Hasta</button>

@code {
    private void Delete(int id)
    {
        var h = db.Hastalar.Find(id);
        if (h != null)
        {
            db.Hastalar.Remove(h);
            db.SaveChanges();
        }
    }
}
